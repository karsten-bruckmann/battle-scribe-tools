{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "app",
                "onlyDependOnLibsWithTags": ["page"]
              },
              {
                "sourceTag": "page",
                "onlyDependOnLibsWithTags": ["feature"]
              },
              {
                "sourceTag": "feature",
                "onlyDependOnLibsWithTags": ["ui", "core", "data-access"]
              },
              {
                "sourceTag": "ui",
                "onlyDependOnLibsWithTags": ["ui"]
              },
              {
                "sourceTag": "core",
                "onlyDependOnLibsWithTags": ["data-access", "utility"]
              },
              {
                "sourceTag": "data-access",
                "onlyDependOnLibsWithTags": ["utility"]
              },
              {
                "sourceTag": "utility",
                "onlyDependOnLibsWithTags": ["utility"]
              },
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              },
              {
                "sourceTag": "scope:battle-cards",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:battle-cards"
                ]
              },
              {
                "sourceTag": "scope:flash-cards-generator",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:flash-cards-generator"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
