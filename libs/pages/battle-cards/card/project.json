{
  "name": "pages-battle-cards-card",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/pages/battle-cards/card/src",
  "prefix": "battle-scribe-tools",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/pages/battle-cards/card/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/pages/battle-cards/card/**/*.ts",
          "libs/pages/battle-cards/card/**/*.html"
        ]
      }
    }
  },
  "tags": ["page", "scope:battle-cards"]
}
