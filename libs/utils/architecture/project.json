{
  "name": "utils-architecture",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/utils/architecture/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/utils/architecture",
        "main": "libs/utils/architecture/src/index.ts",
        "tsConfig": "libs/utils/architecture/tsconfig.lib.json",
        "assets": [
          "libs/utils/architecture/*.md",
          {
            "input": "./libs/utils/architecture/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/utils/architecture/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/utils/architecture",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/utils/architecture",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/utils/architecture/**/*.ts",
          "libs/utils/architecture/generators.json",
          "libs/utils/architecture/executors.json",
          "libs/utils/architecture/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/utils/architecture/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
